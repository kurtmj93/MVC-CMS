<section class="hero is-success mt-4 mb-4">
  <div class="hero-body">
    <p class="title">
      Home
    </p>
    <p class="subtitle">
      All Posts
    </p>
  </div>
</section>

{{#each posts}}

  <div class="card block">
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4"><a href="/post/{{id}}">{{ title }}</a></p>
        <p class="subtitle">By {{ user.username }} on <time datetime="{{createdAt}}">{{ formatDate createdAt }}</time></p>
        <p>{{ content }}</p>
      </div>
    </div>
  </div>
</div>
  {{/each}}